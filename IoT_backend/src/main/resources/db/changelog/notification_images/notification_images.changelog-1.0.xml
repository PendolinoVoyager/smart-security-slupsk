<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="notification_images_000" author="Kacper Karabinowski">

        <createTable tableName="notification_images">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="image_url" type="varchar(500)">
                <constraints nullable="false" />
            </column>
            <column name="ai_service_notification_id" type="int">
                <constraints nullable="false" />
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="notification_images"
                baseColumnNames="ai_service_notification_id"
                constraintName="fk_notification_images_ai_service_notification"
                referencedTableName="ai_service_notifications"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

    </changeSet>
</databaseChangeLog>